<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="activityDialog" parent="@style/AppTheme">
        <!--是否悬浮在activity上-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <!--透明是否-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>
        <!--设置没有窗口标题、dialog标题等各种标题-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:title">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogTitle">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.6</item><!-- 灰度 -->
    </style>

    <style name="textColor_212121_textSize_16_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_212121</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="textColor_212121_textSize_14">
        <item name="android:textColor">@color/text_212121</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textColor_212121_textSize_12">
        <item name="android:textColor">@color/text_212121</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="textColor_999999_textSize_12">
        <item name="android:textColor">@color/text_999999</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>